  <body class="text-center bg-light" >
     <!--NAV-BAR-->
    <%- include('partials/navbar') %>

    <main class="form-signin">
        <div>
            <img src="/assets/spider.png" style="height: 40%; width:55%; object-fit: cover; border-radius: 60%;" /><br><br>
            <h1 class="h3 mb-3 fw-normal"><%= fullname.fullname%></h1>
          
    
            <div class="progress" style="height: 25px;" >
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                 aria-valuenow= "<%= Math.floor((results.total_correct/results.questions.length)*100)%>" 
                 aria-valuemin="0" aria-valuemax="100" 
                 style="width: <%= Math.floor((results.total_correct/results.questions.length)*100)%>%"> Accuracy :<%= Math.floor((results.total_correct/results.questions.length)*100)%>%</div>
              </div><br>
              <h3>Quiz name :</h3> 
              <h5 class=" mb-3 fw-normal"><%= results.name%></h5>
              <div class="row mt-3 p-2" >
    
                <div class="col-2">
    
                </div>
                <div class="col-12  mt-3 " id="tabin"   >
    <table class="m-4" >
        <tr>
            <td>Total Question:</td>
            <td><%= results.questions.length%></td>
        </tr>
        <tr>
            <td>Correct :   </td>
            <td><%= results.total_correct%></td>
        </tr>
        <tr>
            <td>Accuracy:   </td>
            <td><%= Math.floor((results.total_correct/results.questions.length)*100)%> %</td>
        </tr>
    </table>
                </div>
                <div class="col-2">
    
                </div>
              </div>           
        </div>
        <div class="mt-3">
            <a href="/api/v1/download"><button type="button" class="btn btn-success"> Download Excel results</button></a>
        </div>
     
    </main>
    <div>
        
      <div class="container">
          <% for(let i = 0 ; i < results.questions.length ;i++){%>
        <div id="referenceCommentId" style="visibility: visible;">
            <div class="container d-flex justify-content-center align-items-center mt-2 ">
            <div class="card w-50" style="background:rgba(225, 226, 231, 0.9) ">
                <div class="card-body  ">
                    <div class="row d-flex ">
                        <div class="col-10">
                            <h5 class="card-title text-dark">Question &nbsp;<span id="numinc"><%=i+1%></span> <span id="type"></span> </h5>
                        </div>
                    </div>
    
                    <hr class="p-0.2 m-0.5">
                    <div class="d-flex justify-content-right align-items-center text-dark text-left pl-3 row ">
                       <b > <%=results.questions[i].question_statement %></b>
    
                    </div>
                    <hr class="p-0.2 m-0.5">
                    <div>
                        <div class=" row d-flex ml-1  ">
                            <%if(results.questions[i].options[0]){%>
                            <div class="col">
                                <div class="row p-0">
                                    <%if(results.questions[i].options[0].option_id == results.questions[i].correct_option){%>
                                    <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:green"; font-size:20px;"></i></div>
                                    <%}else{%>
                                        <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:red"; font-size:20px;"></i></div><%}%>
                                    <div class="col-11 p-0 text-dark"><%= results.questions[i].options[0].option_statement %> </div><%}%>
                                </div>
                            </div>
                            <%if(results.questions[i].options[1]){%>
                            <div class="col">
                                <div class="row p-0">
                                    <%if(results.questions[i].options[1].option_id == results.questions[i].correct_option){%>
                                     <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:green"; font-size:20px;"></i></div>
                                    <%}else{%>
                                    <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:red"; font-size:20px;"></i></div><%}%>
                                    <div class="col-11 p-0 text-dark"><%= results.questions[i].options[1].option_statement %>   </div><%}%>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class=" row d-flex  ml-1 justify-content-end ">
                            <%if(results.questions[i].options[2]){%>
                            <div class="col">
                                <div class="row p-0">
                                    <%if(results.questions[i].options[2].option_id == results.questions[i].correct_option){%>
                                     <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:green"; font-size:20px;"></i></div>
                                     <%}else{%>
                                    <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:red"; font-size:20px;"></i></div><%}%>
                                    <div class="col-11 p-0 text-dark"><%= results.questions[i].options[2].option_statement %> </div><%}%>
                                </div>
                            </div>
                            <%if(results.questions[i].options[3]){%>
                            <div class="col">
                                <div class="row">
                                    <%if(results.questions[i].options[3].option_id == results.questions[i].correct_option){%>
                                        <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:green"; font-size:20px;"></i></div>
                                        <%}else{%>
                                       <div class="col-1 p-0"> <i class="fa fa-circle  p-0" style="color:red"; font-size:20px;"></i></div><%}%>
                                    <div class="col-11 p-0 text-dark"><%= results.questions[i].options[3].option_statement %>  </div><%}%>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="text-left">
                       <b> Your Response :<%=results.questions[i].response%> </b>
                    </div>

                </div>
                </div>
                </div>
              
            </div>
           
      </div>
      <%}%>
      
      </div>
    </div>

