                            <input type="file" id="fill-input-file-now" name="fill-input-file-now" class="img-upload" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-outline-primary" onclick="uploadImage()">Upload</button>
                    </div>
                </div>
            </div>
        </div>





        <script type="text/javascript">
            function callModal() {
                $("#imgProfile").modal('show');
            }
            async function uploadImage() {
                let image = document.getElementById("fill-input-file-now");
                var file_data = $("#fill-input-file-now").prop("files")[0];
                console.log("file data = "+file_data);
                var formData = new FormData();
                let resp = {};
                formData.append("quiz_image", file_data);

                let data = await fetch("/api/v1/upload_quiz_image", {
                    method: "POST",
                    headers: {
                        "Accept": "application/json"
                    },
                    body: formData, // Setting the data attribute of ajax with file_data

                }).then(response => {
                    response = response.json();
                    console.log(response);
                    console.log(JSON.stringify(response));
                    return response;
                });

                const getImage = async() => {
                    resp = await data;
                    console.log(resp + "resposnse");
                    resp = JSON.parse(JSON.stringify(resp));
                    console.log(resp + "stringify");
                    if (resp) {
                        console.log(resp);
                        image.value = '';
                        file_data.value = '';
                        console.log("ii")
                        let img = document.getElementById("quizImage");
                        img.style.visibility = "visible";
                        console.log("body = " + resp.body, +" status " + resp.status);
                        let name = resp.body;
                        console.log("name = " + name);
                        img.src = `/assets/img/${name}`;


                    }
                    return resp;

                };

                getImage();




                $("#imgProfile").modal('hide');
            }
        </script>
